APP_NAME=SoloCart
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://solocart-backend.onrender.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# Render PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Session & Cache (Use Redis if available on Render)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# If using Render Redis
# REDIS_HOST=
# REDIS_PASSWORD=
# REDIS_PORT=6379

# Mail Config (Required for OTP)
# For Gmail, use App Password (not login password)
# For Mailtrap, use credentials from your inbox
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Frontend URL
FRONTEND_URL=https://polite-bombolone-b0c069.netlify.app

# Sanctum Config
SANCTUM_STATEFUL_DOMAINS=polite-bombolone-b0c069.netlify.app
SESSION_DOMAIN=.netlify.app
